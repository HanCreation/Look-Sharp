# Database (local development)
# Leave empty to use SQLite fallback locally.
DATABASE_URL=""
# Force SQLite even if POSTGRES_* variables are present (dev helper)
FORCE_SQLITE="0"

# Vercel + Supabase (production/integration)
# These are typically injected by the Vercel + Supabase integration.
# The app auto-detects and prefers POSTGRES_PRISMA_URL, then DATABASE_URL,
# then POSTGRES_URL, then POSTGRES_URL_NON_POOLING.
POSTGRES_URL=
POSTGRES_USER=
POSTGRES_HOST=
SUPABASE_JWT_SECRET=
POSTGRES_PRISMA_URL=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=
SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
NEXT_PUBLIC_SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
POSTGRES_URL_NON_POOLING=

# Google AI Studio
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_MODEL_ID="gemini-2.5-flash-image-preview"

# Vercel Blob Storage (optional - will fallback to local storage if not set)
# If you are storing assets in Supabase Storage instead of Vercel Blob,
# leave this unset; the app will write to local /public assets unless extended.
BLOB_READ_WRITE_TOKEN="your_vercel_blob_token_here"

# Upload limits
MAX_UPLOAD_MB=10

# Development
NODE_ENV="development"
